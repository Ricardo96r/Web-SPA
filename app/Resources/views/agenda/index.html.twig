{% extends 'final.html.twig' %}

{% block main %}
    <div class="container">
        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-success" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        {% if is_granted('ROLE_ADMIN') %}
                            <h2>Administracion de sesion/agenda</h2>
                        {% else %}
                            <h2>Ver sesion/agenda</h2>
                        {% endif %}
                    </div>
                    <div class="col-md-4">
                        {% if is_granted('ROLE_ADMIN') %}
                            <!-- Boton nuevo usuario -->
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <a href="{{ path('sesion_create') }}">
                                        <div class="btn btn-primary btn-lg btn-block">Nuevo sesion
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Tabla de sesion -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <th>Seleccionar</th>
                        <th>Cliente</th>
                        <th>Servicio</th>
                        <th>Manager</th>
                        </thead>
                        {% for sesion in sesiones %}
                            <tr>
                                <td class="text-center"><a href="{{ path('sesion_show', { id: sesion.id }) }}"><span
                                                class="glyphicon glyphicon-edit"
                                                aria-hidden="true"></span></a></td>
                                <td>{{ sesion.cliente.cedula }} - {{ sesion.cliente.nombre }} {{ sesion.cliente.apellido }}</td>
                                <td>{{ sesion.servicio.nombre }}</td>
                                <td>{{ sesion.manager.username }} - {{ sesion.manager.nombre }} {{ sesion.manager.apellido }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>


            </div>
        </div>
    </div>
{% endblock %}