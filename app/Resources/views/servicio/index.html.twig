{% extends 'final.html.twig' %}

{% block main %}
    <div class="container">
        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-success" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        {% if is_granted('ROLE_ADMIN') %}
                            <h2>Administracion de servicios</h2>
                        {% else %}
                            <h2>Ver servicios</h2>
                        {% endif %}
                    </div>
                    <div class="col-md-4">
                        {% if is_granted('ROLE_ADMIN') %}
                            <!-- Boton nuevo usuario -->
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <a href="{{ path('servicio_create') }}">
                                        <div class="btn btn-primary btn-lg btn-block">Nuevo servicio
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Tabla de servicios -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <th>Seleccionar</th>
                        <th>Nombre</th>
                        <th>Duracion</th>
                        <th>Precio</th>
                        </thead>
                        {% for servicio in servicios %}
                            <tr>
                                <td class="text-center"><a href="{{ path('servicio_show', { id: servicio.id }) }}"><span
                                                class="glyphicon glyphicon-edit"
                                                aria-hidden="true"></span></a></td>
                                <td>{{ servicio.nombre }}</td>
                                <td>{{ servicio.duracion }}</td>
                                <td>{{ servicio.precio }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>


            </div>
        </div>
    </div>
{% endblock %}