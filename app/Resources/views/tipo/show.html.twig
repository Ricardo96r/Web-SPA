{% extends 'final.html.twig' %}

{% block main %}
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Ver tipo</div>
                <div class="panel-body">
                    <p><strong>Nombre:</strong> {{ tipo.nombre }}</p>
                    <p><strong>Descripcion:</strong> {{ tipo.descripcion }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
            {% if is_granted('ROLE_ADMIN') %}
            <div class="panel panel-default">
                <div class="panel-body">
                    <a href="{{ path('tipo_edit', {id: tipo.id}) }}">
                        <div class="btn btn-primary btn-lg btn-block">Editar tipo
                        </div>
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
